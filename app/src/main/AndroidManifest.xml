<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="jp.ddo.masm11.contextplayer">

  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.BLUETOOTH"/>
  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
  
    <application
	android:name="com.activeandroid.app.Application"
        android:allowBackup="false"
        android:icon="@drawable/launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
      
      <meta-data android:name="AA_DB_NAME" android:value="ContextPlayer.db"/>
      <meta-data android:name="AA_DB_VERSION" android:value="2"/>
      <meta-data android:name="AA_MODELS" android:value="jp.ddo.masm11.contextplayer.PlayContext, jp.ddo.masm11.contextplayer.Config"/>
      
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
	
        <activity android:name=".ui.ExplorerActivity"/>
	
        <activity android:name=".ui.ContextActivity"/>
	
        <service android:name=".service.PlayerService"/>
	
	<receiver android:name=".receiver.BluetoothReceiver">
            <intent-filter>
                <action android:name="android.bluetooth.a2dp.profile.action.CONNECTION_STATE_CHANGED"/>
            </intent-filter>
	</receiver>
	
	<receiver android:name=".widget.WidgetProvider">
	  <intent-filter>
	    <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
	  </intent-filter>
	  <meta-data
	      android:name="android.appwidget.provider"
	      android:resource="@xml/appwidget_info"/>
	</receiver>
	
    </application>

</manifest>
